\newcommand{\JWAddNewTheoremStyle}[5]{
	\mdtheorem[style=#5]{#1}{#2}
	\newenvironment{#4}[1][]{
		\def\baseColor{#3}
		\begin{#1}[##1]
			\addcontentsline{toc}{subsection}{#2 \arabic{#1}: ##1}
		}{\end{#1}}
}

